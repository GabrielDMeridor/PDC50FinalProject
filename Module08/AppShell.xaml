<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Module08.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Module08"
    xmlns:views ="clr-namespace:Module08.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Module08">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="user"
        ContentTemplate="{DataTemplate views:UserPage}"
        Route="UserPage" />

	<ShellContent
        ContentTemplate="{DataTemplate views:StudentListPage}"
        Route="StudentListPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />

</Shell>
